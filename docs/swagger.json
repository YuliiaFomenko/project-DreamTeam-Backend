{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Harmoniq API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Harmoniq API"
  },
  "servers": [
    {
      "url": "http://localhost:3008"
    },
    {
      "url": "https://project-dreamteam-backend.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "User operations."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    },
    {
      "name": "Articles",
      "description": "Operations with articles."
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register a new user.",
        "operationId": "authRegister",
        "description": "Registers a new user with the provided details.",
        "security": [],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "description": "User's name.",
                    "type": "string",
                    "example": "Martha Smith"
                  },
                  "email": {
                    "description": "User's email address.",
                    "type": "string",
                    "example": "martha.smith@mail.com"
                  },
                  "password": {
                    "description": "Password for the new user.",
                    "type": "string",
                    "example": "securePassword123"
                  },
                  "avatar": {
                    "description": "User's avatar picture.",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registered a new user successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "$ref": "#/components/responses/409"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Log in a user.",
        "operationId": "authLogin",
        "description": "Logs in a user and returns an access token.",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "description": "User's email.",
                    "type": "string",
                    "example": "martha_smith@gmail.com"
                  },
                  "password": {
                    "description": "User's password.",
                    "type": "string",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logs in a user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "accessToken"
                      ],
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "U21wdOfyoytZ8NY+E+A+Uz+4gbkMbkMn/LdBDgKo"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/auth/refresh": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Refresh user's session.",
        "operationId": "authRefresh",
        "description": "Refreshes the user's session by generating a new access token.",
        "security": [],
        "responses": {
          "200": {
            "description": "Successfully refreshed user's session.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully refreshed a session!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "accessToken"
                      ],
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "U21wdOfyoytZ8NY+E+A+Uz+4gbkMbkMn/LdBDgKo"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Log out a user.",
        "operationId": "authLogout",
        "description": "Logs out a user.",
        "security": [],
        "responses": {
          "204": {
            "description": "Successfully logs out a user."
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "required": [
          "name",
          "email",
          "avatarUrl",
          "savedArticles",
          "_id"
        ],
        "properties": {
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Martha Smith"
          },
          "email": {
            "description": "User's email address",
            "type": "string",
            "example": "martha.smith@mail.com"
          },
          "password": {
            "description": "User's encrypted password",
            "type": "string",
            "example": "$2b$10$8y6NyU.9T9d0xrthrhYUYFvtTFdkal/G0kfm"
          },
          "savedArticles": {
            "description": "List of saved articles IDs",
            "type": "array",
            "items": {
              "type": "string",
              "example": "65e4decdd286b30065d54af9"
            }
          },
          "avatarUrl": {
            "description": "User's avatar URL",
            "type": "string",
            "example": "https://res.cloudinary.com/uqwgdu/image/upload/image.png"
          },
          "_id": {
            "description": "User's database ID",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "HTTP error occurred"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "errorMessage"
                  ],
                  "properties": {
                    "errorMessage": {
                      "type": "string",
                      "description": "Detailed error message."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "409": {
        "description": "Conflict response.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 409
                },
                "message": {
                  "type": "string",
                  "example": "HTTP error occurred"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "errorMessage"
                  ],
                  "properties": {
                    "errorMessage": {
                      "type": "string",
                      "description": "Detailed error message."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Server error.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Something went wrong"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "errorMessage"
                  ],
                  "properties": {
                    "errorMessage": {
                      "type": "string",
                      "description": "Detailed error message."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}